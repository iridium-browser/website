	[
		{
			"@context": "http://schema.org/",
			"@type": "NewsArticle",
			"mainEntityOfPage": {
				"@type": "WebPage",
				"@id": "{{ site.url | append: site.baseurl}}"
			},
			"headline": "{{ page.title }}",
			"image": {
				"@type": "ImageObject",
				"width": "1600",
				"height": "840",
				"contentUrl": "{% if page.hotpic %}{{ page.hotpic | absolute_url }}{% else %}{{ site.hotpic | absolute_url }}{% endif %}",
				"url": "{% if page.hotpic %}{{ page.hotpic | absolute_url }}{% else %}{{ site.hotpic | absolute_url }}{% endif %}"
			},
			"datePublished": "{{ page.date | date_to_xmlschema }}",
			"dateModified": "{{ page.date | date_to_xmlschema }}",
			"author": {
				"@type": "Person",
				"name": "{{ page.author }}"
			},
			"publisher": {
				"@type": "Organization",
				"name": "{{ site.title }}",
				"logo": {
					"@type": "ImageObject",
					"url": "{{ site.hotlogo | absolute_url }}"
				},
			},
			"description": "{{ page.description }}",
			"articleBody": "{{ content | strip_html | strip_newlines }}"
		},
		{
			"@context": "http://schema.org",
			"@type": "BreadcrumbList",
			"itemListElement": [	
				{
				"@type": "ListItem",
				"position": 1,
				"item": {
					"@id": "{{ site.url | append: site.baseurl }}",
					"name": "home"
				}
			},
			{
				"@type": "ListItem",
				"position": 2,
				"item": {
					"@id": "{{ '/news/' | absolute_url }}",
					"name": "news"
				}
			},
			{
				"@type": "ListItem",
				"position": 3,
				"item": {
					"@id": "{{ page.url | absolute_url }}",
					"name": "{{ page.title }}"
				}
			}
			]
		}
	]