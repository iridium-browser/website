	[{% 
	unless page.structured-data == "news" %}
		{
		"@context": "http://schema.org",
		"@type": "WebPage",
		"name": "{{ page.title }}",
		"url": "{{ page.url | prepend: site.baseurl | prepend: site.url }}",
		"description": "{{ page.description }}"
		},{% 
	endunless %}{% 
	if page.structured-data == "news" %}
		{
		"@context": "https://schema.org",
		"@type": "NewsArticle",
		"mainEntityOfPage": { {% 
		for post in site.posts limit: 1 %}
			"@type": "WebPage",
			"@id": "{{ post.url | absolute_url }}"
		},
		"headline": "{{ post.title }}",
		"image": "{{ post.hotpic | absolute_url }}",
		"datePublished": "{{ post.date | date_to_xmlschema }}",
		"dateModified": "{{ post.date | date_to_xmlschema }}",
		"author": {
			"@type": "Person",
			"name": "{{ post.author }}"
		},
		"publisher": {
			"@type": "Organization",
			"name": "{{ site.title }}",
			"logo": {
				"@type": "ImageObject",
				"url": "{{ site.hotlogo }}"
			}
		},
		"description": "{{ post.description }}" {% 
		endfor %}
		},{% 
	endif %}{% 
	if page.structured-data == "faq" %}
		{
		"@context": "http://schema.org",
		"@type": "FAQPage",
		"mainEntity": [{% 
		for faq in site.faq offset:1 limit:13 %}
			{
			"@type": "Question",
			"name": "{{ faq.title }}",
			"dateCreated": "{{ faq.date }}",
			"acceptedAnswer": {
				"@type": "Answer",
				"text": "{{ faq.content | strip_html | strip_newlines | replace:'The settings can be found in Windows at C:\Users\%user%\AppData\Local\Iridium\User Data\Default\Local Extension Settings.','' }}",
				"dateCreated": "{{ faq.date }}"
				}
			},{% 
		endfor %}{% 
		for faq in site.faq offset:14 limit:1 %}
			{
			"@type": "Question",
			"name": "{{ faq.title }}",
			"dateCreated": "{{ faq.date }}",
			"acceptedAnswer": {
				"@type": "Answer",
				"text": "{{ faq.content | strip_html | strip_newlines }}",
				"dateCreated": "{{ faq.date }}"
				}
			}{% 
		endfor %}
			]
		},{% 
	endif %}
		{
		"@context": "http://schema.org",
		"@type": "BreadcrumbList",
		"itemListElement": [
			{
			"@type": "ListItem",
			"position": 1,
			"item": {
				"@id": "{{ site.url | append: site.baseurl }}",
				"name": "home"
				}
			},{% 
		unless page.structured-data == "news" %}
			{
			"@type": "ListItem",
			"position": 2,
			"item": {
				"@id": "{{ page.url | absolute_url }}",
				"name": "{{ page.title }}"
				}
			}{% 
		else %}
			{
			"@type": "ListItem",
			"position": 2,
			"item": {
				"@id": "{{ '/news/' | absolute_url }}",
				"name": "news"
				}
			},
			{
			"@type": "ListItem",
			"position": 3,
			"item": {
				"@id": "{{ page.url | absolute_url }}",
				"name": "{{ page.title }}"
				}
			}{% 
		endunless %}
			]
		}
	]