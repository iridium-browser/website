---
sitemap:
  exclude: 'yes'
---
{
	"manifest_version": 2,
	"name": "{{ site.title }}",
	"short_name": "{{ site.title }}",
	"start_url": "{{ '/' | relative_url }}",
	"theme_color": "#{{ site.app-color }}",
	"background_color": "#{{ site.app-color }}",
	"description": "{{site.description | strip_newlines}}",
	"display": "standalone",
	"prefer_related_applications": false,
	"offline_enabled": true,
	"icons": [
		{
		"src": "assets/images/app-icons/android_192x192.png",
		"sizes": "192x192",
		"type": "image/png"
		}, {
		"src": "assets/images/app-icons/android_512x512.png",
		"sizes": "512x512",
		"type": "image/png"
		}, {
		"src": "assets/images/app-icons/ios_120x120.png",
		"sizes": "120x120",
		"type": "image/png"
		}, {
		"src": "assets/images/app-icons/ios_180x180.png",
		"sizes": "180x180",
		"type": "image/png"
		}, {
		"src": "assets/images/app-icons/win-small_70x70.png",
		"sizes": "70x70",
		"type": "image/png"
		}, {
		"src": "assets/images/app-icons/win-medium_150x150.png",
		"sizes": "150x150",
		"type": "image/png"
		}, {
		"src": "assets/images/app-icons/win-large_310x310.png",
		"sizes": "310x310",
		"type": "image/png"
		}, {
		"src": "assets/images/app-icons/win-wide_310x150.png",
		"sizes": "310x150",
		"type": "image/png"
		}
	]
}